{% extends('pages/profile/main.html.twig') %}

{% block second_section %}
    <h2>
        Запланированные записи
    </h2>
    {% if appointments and appointments is not empty %}
    <table class="table table-success table-striped align-middle">
        <thead>
        <tr>
            <th scope="col">№</th>
            <th scope="col">Врач</th>
            <th scope="col">ФИО врача</th>
            <th scope="col">Дата и время</th>
            <th class="text-end" scope="col">Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for appointment in appointments %}
            <tr>
                <th scope="row">
                    {{ loop.index }}
                </th>
                <td>
                    {{ appointment.doctor.post }}
                </td>
                <td>
                    {{ appointment.doctor.name }}
                </td>
                <td>
                    {{ appointment.date|date("d.m.Y") ~ ' ' ~ constant('App\\Entity\\Appointment::TIME_CHOICES')|keys[appointment.timeSlot] }}
                </td>
                <td>
                    <div class="btn-group float-end">
                        <a href="{{ path('appointment.update', {id: appointment.id}) }}" class="btn btn-secondary">
                            Изменить время
                        </a>
                        <a href="{{ path('appointment.delete', {id: appointment.id}) }}" class="btn btn-danger">
                            Отказаться
                        </a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
    <div class="badge bg-success text-wrap d-block my-3">
        У вас не запланировано ни одного визита к врачу.
    </div>
    {% endif %}
{% endblock %}

{% block btn_custom %}
    <a href="{{ path('appointment.create') }}" class="btn btn-secondary">Записаться к врачу</a>
    <a href="{{ path('user.delete', {id: app.user.id}) }}" class="btn btn-danger">Удалить профиль</a>
{% endblock %}